<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="1.0" prefWidth="230.0" vgap="1.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danield.movemecursor.PrimaryController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="70.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="70.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Button id="start-button" fx:id="btnStart" onAction="#startButtonPressed" prefWidth="230.0" text="Start" GridPane.columnSpan="3">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <CheckBox fx:id="ckbxTimer" mnemonicParsing="false" prefWidth="120.0" text="Stop after" GridPane.rowIndex="1" />
      <ChoiceBox fx:id="choiceboxDurationSelect" prefWidth="130.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Label fx:id="lblTimeLeft" text="00:00:00" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
         <GridPane.margin>
            <Insets right="1.0" />
         </GridPane.margin></Label>
   </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</GridPane>
